{
  "name": "ql-vscode",
  "displayName": "QL",
  "description": "QL for Visual Studio Code",
  "author": "Semmle",
  "private": true,
  "version": "0.0.1",
  "publisher": "Semmle",
  "repository": {
    "type": "git",
    "url": "https://github.com/Semmle/ql.git"
  },
  "engines": {
    "vscode": "^1.33.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:ql"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "ql",
        "aliases": [
          "QL",
          "ql"
        ],
        "extensions": [
          ".ql",
          ".qll"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "dbscheme",
        "aliases": [
          "DBScheme",
          "dbscheme"
        ],
        "extensions": [
          ".dbscheme"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ql",
        "scopeName": "source.ql",
        "path": "./out/syntaxes/ql.tmLanguage.json"
      },
      {
        "language": "dbscheme",
        "scopeName": "source.dbscheme",
        "path": "./out/syntaxes/dbscheme.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "QL",
      "properties": {
        "ql.distributionPath": {
          "scope": "window",
          "type": "string",
          "default": "",
          "description": "Location of the QL distribution"
        },
        "ql.defaultProject.dbScheme": {
          "type": [
            "string"
          ],
          "default": "",
          "description": "Location of the dbscheme"
        },
        "ql.defaultProject.libraryPath": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Library Path"
        },
        "ql.projects": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "object",
              "properties": {
                "dbScheme": {
                  "type": "string"
                },
                "libraryPath": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "default": {},
          "description": "Library Path"
        }
      }
    },
    "commands": [
      {
        "command": "ql.runQuery",
        "title": "QL: Run Query"
      },
      {
        "command": "ql.quickEval",
        "title": "QL: Quick Eval"
      },
      {
        "command": "ql.chooseDatabase",
        "title": "QL: Choose Database"
      },
      {
        "command": "ql.setCurrentDatabase",
        "title": "QL: Set Current Database"
      },
      {
        "command": "qlDatabases.setCurrentDatabase",
        "title": "Make Current"
      },
      {
        "command": "qlDatabases.removeDatabase",
        "title": "Remove"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "qlDatabases.setCurrentDatabase",
          "group": "inline",
          "when": "view == qlDatabases"
        },
        {
          "command": "qlDatabases.removeDatabase",
          "group": "9_qlCommands",
          "when": "view == qlDatabases"
        }
      ],
      "explorer/context": [
        {
          "command": "ql.setCurrentDatabase",
          "group": "9_qlCommands"
        }
      ],
      "commandPalette": [
        {
          "command": "ql.chooseDatabase"
        },
        {
          "command": "qlDatabases.setCurrentDatabase",
          "when": "false"
        },
        {
          "command": "qlDatabases.removeDatabase",
          "when": "false"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ql-container",
          "title": "QL",
          "icon": "media/ql.svg"
        }
      ]
    },
    "views": {
      "ql-container": [
        {
          "id": "qlDatabases",
          "name": "Databases"
        }
      ]
    }
  },
  "scripts": {
    "watch": "npm-run-all -p watch:*",
    "watch:extension": "tsc --watch",
    "test": "mocha --exit -r ts-node/register test/**/*.ts",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "format": "tsfmt -r",
    "gulp": "gulp"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/google-protobuf": "^3.2.7",
    "@types/gulp": "^4.0.6",
    "@types/mocha": "^2.2.48",
    "@types/node": "^12.0.7",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@types/tmp": "^0.1.0",
    "chai": "^4.2.0",
    "child-process-promise": "^2.2.1",
    "glob": "^7.1.4",
    "glob-promise": "^3.4.0",
    "gulp": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^5.0.1",
    "js-yaml": "^3.12.0",
    "mocha": "^6.1.4",
    "npm-run-all": "^4.1.5",
    "through2": "^3.0.1",
    "ts-node": "^8.1.0",
    "ts-protoc-gen": "^0.9.0",
    "typescript": "^3.4.5",
    "typescript-formatter": "^7.2.2",
    "vinyl": "^2.2.0",
    "vsce": "^1.65.0",
    "vscode": "^1.1.34",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2"
  },
  "dependencies": {
    "google-protobuf": "^3.7.1",
    "leb": "^0.3.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "tmp": "^0.1.0",
    "ts-loader": "^5.4.5",
    "ts-node": "^8.1.0",
    "vscode-languageclient": "^5.2.1"
  }
}
