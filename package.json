{
  "name": "semmlestudiovscode",
  "displayName": "QL",
  "description": "QL for Visual Studio Code",
  "author": "Semmle",
  "private": true,
  "version": "0.0.1",
  "publisher": "Semmle",
  "engines": {
    "vscode": "^1.33.0"
  },
  "categories": [
    "Languages"
  ],
  "activationEvents": [
    "onLanguage:ql"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "ql",
        "aliases": [
          "QL",
          "ql"
        ],
        "extensions": [
          ".ql",
          ".qll"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ql",
        "scopeName": "source.ql",
        "path": "./syntaxes/ql.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "QL",
      "properties": {
        "ql.distributionPath": {
          "scope": "window",
          "type": "string",
          "default": "",
          "description": "Location of the QL distribution"
        },
        "ql.defaultProject.dbScheme": {
          "type": [
            "string"
          ],
          "default": "",
          "description": "Location of the dbscheme"
        },
        "ql.defaultProject.libraryPath": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Library Path"
        },
        "ql.projects": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "object",
              "properties": {
                "dbScheme": {
                  "type": "string"
                },
                "libraryPath": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "default": {},
          "description": "Library Path"
        }
      }
    },
    "commands": [
      {
        "command": "ql.chooseDatabase",
        "title": "QL: Choose Database"
      },
      {
        "command": "ql.setCurrentDatabase",
        "title": "QL: Set Current Database"
      },
      {
        "command": "qlDatabases.setCurrentDatabase",
        "title": "Make Current"
      },
      {
        "command": "qlDatabases.removeDatabase",
        "title": "Remove"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "qlDatabases.setCurrentDatabase",
          "group": "inline",
          "when": "view == qlDatabases"
        },
        {
          "command": "qlDatabases.removeDatabase",
          "group": "9_qlCommands",
          "when": "view == qlDatabases"
        }
      ],
      "explorer/context": [
        {
          "command": "ql.setCurrentDatabase",
          "group": "9_qlCommands"
        }
      ],
      "commandPalette": [
        {
          "command": "ql.chooseDatabase"
        },
        {
          "command": "qlDatabases.setCurrentDatabase",
          "when": "false"
        },
        {
          "command": "qlDatabases.removeDatabase",
          "when": "false"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ql-container",
          "title": "QL",
          "icon": "media/ql.svg"
        }
      ]
    },
    "views": {
      "ql-container": [
        {
          "id": "qlDatabases",
          "name": "Databases"
        }
      ]
    }
  },
  "scripts": {
    "compile": "npm-run-all compile:*",
    "compile:extension": "tsc",
    "watch": "npm-run-all -p watch:*",
    "watch:extension": "tsc --watch",
    "vscode:prepublish": "tsc -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "package": "vsce package",
    "format": "tsfmt -r"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.2.7",
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.52",
    "@types/react": "^16.8.13",
    "@types/react-dom": "^16.8.3",
    "@types/tmp": "^0.1.0",
    "npm-run-all": "^4.1.5",
    "ts-protoc-gen": "^0.9.0",
    "typescript": "^2.1.5",
    "typescript-formatter": "^7.2.2",
    "vsce": "^1.59.0",
    "vscode": "^1.1.33",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "dependencies": {
    "google-protobuf": "^3.7.1",
    "leb": "^0.3.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "tmp": "^0.1.0",
    "ts-loader": "^5.3.3",
    "vscode-languageclient": "^5.2.1"
  }
}
