// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension (ql-vscode)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}/dist/ql-vscode"
      ],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/dist/ql-vscode/out/**/*.js"
      ],
    "preLaunchTask": "Build"
    },
    {
      "name": "Launch Tests (ql-vscode)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}/dist/ql-vscode",
        "--extensionTestsPath=${workspaceRoot}/extensions/ql-vscode/out/test"
      ],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/dist/ql-vscode/out/**/*.js",
        "${workspaceRoot}/extensions/ql-vscode/out/test/**/*.js"
      ],
      "preLaunchTask": "Build"
    }
  ]
}
