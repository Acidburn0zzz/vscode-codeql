{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "preserveWatchOutput": true
  },
  "exclude": [
    "node_modules",
    "**/view"
  ]
}
